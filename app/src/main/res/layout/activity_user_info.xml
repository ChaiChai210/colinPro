<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_qipai_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_topbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0pt"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="@dimen/dp_140"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_qipai_left"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/btn_grxx"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/pc_grxx_select"
                android:clickable="true"
                android:focusable="true" />

            <RadioButton
                android:id="@+id/btn_tzjl"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/pc_tzjl_select" />

            <RadioButton
                android:id="@+id/btn_zhmx"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/pc_zhmx_select" />

            <RadioButton
                android:id="@+id/btn_grbb"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/pc_grbb_select" />

            <RadioButton
                android:id="@+id/btn_vipxq"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/pc_vipxq_select" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/fl_user_info"
            android:layout_width="0.0pt"
            android:layout_height="fill_parent"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>