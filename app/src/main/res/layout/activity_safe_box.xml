<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_qipai_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_topbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/rg_safe"
            android:layout_width="@dimen/dp_140"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/ic_qipai_left"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/btn_zhuanru"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/zhuanru_select"
                android:clickable="true"
                android:focusable="true" />

            <RadioButton
                android:id="@+id/btn_quchu"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/quchu_select" />

            <RadioButton
                android:id="@+id/btn_mingxi"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/mingxi_select" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/fl_safe_contain"
            android:layout_width="0.0pt"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>