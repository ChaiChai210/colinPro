<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_radier"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    app:cardBackgroundColor="#00000000"
    app:cardCornerRadius="@dimen/dp_5"
    app:cardElevation="0.0dip">

    <LinearLayout
        android:layout_width="@dimen/dp_157"
        android:layout_height="@dimen/dp_225"
        android:layout_gravity="center"
        android:background="@drawable/round_cardview_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_read_piv_iv"
            android:layout_width="@dimen/dp_67"
            android:layout_height="@dimen/dp_67"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_vx"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="微信客服x"
            android:textColor="#ff868686"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/ni_cheng"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/vx_number"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_15" />

        <ImageButton
            android:id="@+id/btn_vx_kefu"
            android:layout_width="@dimen/dp_84"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@null"
            android:src="@drawable/ic_cum_copy" />
    </LinearLayout>
</androidx.cardview.widget.CardView>