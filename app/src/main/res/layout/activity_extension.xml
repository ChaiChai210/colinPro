<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_qipai_bg"
    android:orientation="vertical">

    <include layout="@layout/activity_topbar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="@dimen/dp_143"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:background="@drawable/ic_qipai_left"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/btn_tui_guang"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/tui_guang_select"
                android:clickable="true"
                android:focusable="true" />

            <RadioButton
                android:id="@+id/btn_my_yong"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/my_yong_select" />

            <RadioButton
                android:id="@+id/btn_yogn_jilu"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/yong_jilu_select" />

            <RadioButton
                android:id="@+id/btn_team"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/team_select" />

            <RadioButton
                android:id="@+id/btn_daili"
                style="@style/qipai_list"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/daili_select" />
        </RadioGroup>

        <FrameLayout
            android:id="@+id/fl_extension_contain"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/dp_12"
            android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>