<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="14.0"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_112"
            android:layout_height="fill_parent"
            android:background="@drawable/shape_promotion_qrt"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5">

            <ImageView
                android:id="@+id/iv_save_qr"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:gravity="center_horizontal"
                android:text="点击自动保存图片"
                android:textColor="#ff090607"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_share_tofriend"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_weight="1.0"
                android:src="@drawable/sharetofriend" />

            <ImageView
                android:id="@+id/iv_shar_toqq"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_weight="1.0"
                android:src="@drawable/sharetoqq" />

            <ImageView
                android:id="@+id/iv_share_tocircle"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0"
                android:src="@drawable/sharetocircle" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_weight="5.7"
        android:background="@drawable/webbg"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_website"
            android:layout_width="0.0dip"
            android:layout_height="@dimen/dp_32"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="5.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/shape_promotion_left"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_10"
            android:singleLine="true"
            android:textColor="@color/white_color"
            android:textSize="@dimen/sp_15" />

        <ImageView
            android:id="@+id/iv_copywebsite"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_38"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/copywebsite" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_weight="6.8">

        <ImageView
            android:id="@+id/iv_get_history"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginRight="12.0dip"
            android:layout_weight="1.0"
            android:src="@drawable/gethitory" />

        <ImageView
            android:id="@+id/iv_tochart"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:src="@drawable/moneychat" />
    </LinearLayout>
</LinearLayout>