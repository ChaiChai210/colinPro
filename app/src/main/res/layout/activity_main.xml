<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/main_default"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_52"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_42"
                android:background="@drawable/ic_home_top_bg"
                android:orientation="horizontal" />

            <FrameLayout
                android:id="@+id/fl_user"
                android:layout_width="@dimen/dp_180"
                android:layout_height="fill_parent"
                android:background="@drawable/ic_user">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_icon"
                        android:layout_width="@dimen/dp_33"
                        android:layout_height="@dimen/dp_33"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/dp_13"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:src="@drawable/user_icon" />

                    <LinearLayout
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_marginStart="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_11"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_weight="1.0"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_login"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="未登录"
                            android:textColor="#ffebdfc7"
                            android:textSize="@dimen/sp_12" />

                        <LinearLayout
                            android:id="@+id/ll_login"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0pt"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1.0"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/ll_register_login"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="@dimen/dp_3"
                                android:orientation="horizontal">

                                <ImageButton
                                    android:id="@+id/btn_register"
                                    android:layout_width="@dimen/dp_43"
                                    android:layout_height="fill_parent"
                                    android:layout_gravity="start"
                                    android:background="@null"
                                    android:src="@drawable/ic_register" />

                                <ImageButton
                                    android:id="@+id/btn_login"
                                    android:layout_width="@dimen/dp_43"
                                    android:layout_height="fill_parent"
                                    android:layout_marginStart="@dimen/dp_5"
                                    android:layout_marginLeft="@dimen/dp_5"
                                    android:background="@null"
                                    android:src="@drawable/ic_login" />
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/img_vip_home"
                                android:layout_width="wrap_content"
                                android:layout_height="fill_parent"
                                android:layout_gravity="start"
                                android:layout_marginBottom="@dimen/dp_3"
                                android:background="@null"
                                android:src="@drawable/home_vip1"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_42"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_toEndOf="@+id/fl_user"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_toRightOf="@+id/fl_user">

                <RelativeLayout
                    android:layout_width="@dimen/dp_145"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_golden_account"
                        android:layout_width="@dimen/dp_123"
                        android:layout_height="@dimen/dp_22"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/ic_wallet_account"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/sp_15" />

                    <ImageView
                        android:id="@+id/img_golden"
                        android:layout_width="@dimen/dp_29"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_golden" />

                    <ImageButton
                        android:id="@+id/img_fresh"
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_refresh" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_weight="1.0"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_20">

                    <ImageView
                        android:id="@+id/img_website"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:src="@drawable/ic_website_ky" />

                    <ImageButton
                        android:id="@+id/btn_copy"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="fill_parent"
                        android:layout_alignEnd="@+id/img_website"
                        android:background="@null" />
                </RelativeLayout>

                <ImageButton
                    android:id="@+id/btn_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_6"
                    android:background="@null"
                    android:padding="@dimen/dp_2"
                    android:src="@drawable/ic_settings" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="@dimen/dp_140"
                android:layout_height="fill_parent"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:background="@drawable/ic_home_left"
                    android:paddingTop="@dimen/dp_22"
                    android:paddingBottom="@dimen/dp_10" />

                <ImageView
                    android:id="@+id/img_down_moredata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0.0pt"
                android:layout_height="fill_parent"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_notify"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dp_17"
                    android:drawableStart="@drawable/ic_notify_ring"
                    android:drawablePadding="@dimen/dp_11"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="@color/text_yellow_light"
                    android:textSize="@dimen/sp_10" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewContent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_60">

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dp_53"
                android:layout_alignParentBottom="true"
                android:background="@drawable/ic_home_bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_108"
                    android:layout_height="fill_parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/ic_spilt_line" />

                <FrameLayout
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0">

                    <RelativeLayout
                        android:id="@+id/btn_activity"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@null">

                        <ImageView
                            android:layout_width="@dimen/dp_28"
                            android:layout_height="@dimen/dp_35"
                            android:layout_centerInParent="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_activity" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_action_angle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_13"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginRight="@dimen/dp_10"
                        android:background="@drawable/shape_circle_red"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_13"
                        android:text="1"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/sp_9"
                        android:visibility="gone" />
                </FrameLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/ic_spilt_line" />

                <RelativeLayout
                    android:id="@+id/btn_shuffle"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null">

                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_shuffle" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/ic_spilt_line" />

                <RelativeLayout
                    android:id="@+id/btn_message"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null">

                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_message" />

                    <TextView
                        android:id="@+id/iv_msg_count"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_13"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/dp_2"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:background="@drawable/shape_circle_red"
                        android:gravity="center"
                        android:minWidth="@dimen/dp_13"
                        android:text="···"
                        android:textColor="@color/white_color"
                        android:textSize="@dimen/sp_9"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/ic_spilt_line" />

                <RelativeLayout
                    android:id="@+id/btn_customer"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@null">

                    <ImageView
                        android:layout_width="@dimen/dp_28"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_customer_service" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/ic_spilt_line" />

                <RelativeLayout
                    android:id="@+id/btn_safe_box"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:background="@null">

                    <ImageView
                        android:layout_width="@dimen/dp_42"
                        android:layout_height="@dimen/dp_35"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_safe_box" />
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="@dimen/dp_3"
                    android:src="@drawable/ic_spilt_line" />

                <View
                    android:layout_width="@dimen/dp_95"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="@dimen/dp_14" />

                <View
                    android:layout_width="@dimen/dp_95"
                    android:layout_height="fill_parent"
                    android:layout_marginStart="@dimen/dp_14"
                    android:layout_marginEnd="@dimen/dp_14" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_promotion"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dp_9"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_promotion" />

            <ImageButton
                android:id="@+id/btn_withdrawal"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_52"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_toStartOf="@+id/btn_recharge"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_withdrawal" />

            <ImageButton
                android:id="@+id/btn_recharge"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_53"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dp_7"
                android:layout_marginEnd="@dimen/dp_14"
                android:background="@null"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_recharge" />
        </RelativeLayout>
    </LinearLayout>


</FrameLayout>